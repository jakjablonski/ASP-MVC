@model HurtowniaMVC.Models.Czesc
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}


@Html.Action("KategoriaMenu")


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">


                

            </div>

            <div class="col-md-8">
                <div class="product-content-right">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img src="~/Content/img/prod.png" alt="">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">Nazwa Czesci : @Model.Nazwa</h2>
                                <div class="product-inner-price">
                                    Cena : <ins>@Model.Cena zł</ins>
                                </div>

                                <form action="" class="cart">
                                   
                                    <a href="@Url.Action("AddToCart", "Cart" , new { id = Model.CzescId}) ">Dodaj do koszyka
                                        @*<button class="add_to_cart_button" type="submit">

                                            Add to cart
                                        </button>*@
                                    </a>
                                </form>

                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>